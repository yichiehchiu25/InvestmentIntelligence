# 資料庫設定
DATABASE_URL=your_database_url_here

# OpenAI API (用於AI新聞分析)
OPENAI_API_KEY=your_openai_api_key_here

# 財經數據API
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
FINANCIAL_MODELING_PREP_API_KEY=your_fmp_api_key_here

# 新聞API
NEWS_API_KEY=your_news_api_key_here

# 開發環境設定
NODE_ENV=development
PORT=5000

# API配額設定 (可選)
MAX_NEWS_SCRAPING_PER_HOUR=100
MAX_AI_REQUESTS_PER_HOUR=50
MAX_FINANCIAL_DATA_REQUESTS_PER_DAY=500

# 定時任務開關 (可選)
ENABLE_SCHEDULED_TASKS=true
ENABLE_NEWS_SCRAPING=true
ENABLE_AI_ANALYSIS=true

# 如何獲取API密鑰:
# 
# 1. OpenAI API Key:
#    - 訪問: https://platform.openai.com/api-keys
#    - 登入並創建新的API密鑰
#    - 注意: GPT-4需要付費帳戶
#
# 2. Alpha Vantage API Key (免費):
#    - 訪問: https://www.alphavantage.co/support/#api-key
#    - 免費版每日500次請求
#
# 3. Financial Modeling Prep API Key:
#    - 訪問: https://financialmodelingprep.com/developer/docs
#    - 免費版每日250次請求
#
# 4. NewsAPI Key (免費):
#    - 訪問: https://newsapi.org/register
#    - 免費版每日100次請求
#
# 使用說明:
# 1. 複製此文件為 .env
# 2. 填入您的API密鑰
# 3. 重啟服務器